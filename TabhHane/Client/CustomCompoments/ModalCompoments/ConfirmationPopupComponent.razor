@inherits BaseModalCompoment
<div class="card-body">
    <p>@Message</p>
</div>
<div class="row justify-content-center">
    <div class="d-flex">
        <div class="ml-auto p-2">
            <ButtonCompoment Caption="@YesText" Onclick="@ConfirmCliced" Color="primary" />
            <ButtonCompoment Caption="@CancelText" Onclick="@CancelCliced" Color="light" />

        </div>
    </div>
</div>
@code {
    public override async Task SetParametersAsync(ParameterView parameters)
    {
        Message = parameters.GetValueOrDefault<string>("Message") ?? "No Mesage Found";
        YesText = parameters.GetValueOrDefault<string>("YesText") ?? "Yes";
        await base.SetParametersAsync(parameters);
    }
}

