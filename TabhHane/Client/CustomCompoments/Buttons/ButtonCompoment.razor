@inherits BaseButtonComponent
<button 
    class="btn@(IsSmall?" btn-sm":"") btn@(IsOutline ? "-outline":"")-@Color" 
    type="submit" 
    disabled="@IsBusy"
    onclick="@Onclick"
    title="@ToolTipStr"


>
    <span class="bi bi-@Icon"></span>
    @if (IsBusy)
    {
      <span class="spinner-border spinner-border-sm mr-1"></span>
    }
    @Caption
</button>
